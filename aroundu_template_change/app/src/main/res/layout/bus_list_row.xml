<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="More Info"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BusNo: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bus_name_title"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bus_source_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_name_title"
            android:layout_marginTop="10dp"
            android:text="Source: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bus_source_title"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bus_destination_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_source_title"
            android:layout_marginTop="10dp"
            android:text="Destination: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_source"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bus_destination_title"
            android:text="0"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
