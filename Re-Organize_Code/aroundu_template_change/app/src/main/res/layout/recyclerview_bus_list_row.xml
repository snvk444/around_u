<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="More Info"
            android:textSize="14sp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/line_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight = "true"
            android:text=""
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/bus_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BusNo: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bus_name_title"
            android:text="0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bus_source_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_name_title"
            android:layout_marginTop="10dp"
            android:text="Source: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bus_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bus_source_title"
            android:text="0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bus_destination_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus_source_title"
            android:layout_marginTop="10dp"
            android:text="Destination: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bus_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_source"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bus_destination_title"
            android:text="0"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa"/>

</LinearLayout>

